<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sandbox.k.yogurtparkflavors.WelcomeActivity">

    <TextView
        android:id="@+id/debug_vals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_debug_yet"
        android:visibility="gone"/>

    <Button
        android:id="@+id/see_flavors_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/see_flavors"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/service_toggle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/service_toggle_label"/>
    <ToggleButton
        android:id="@+id/service_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
